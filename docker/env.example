# PasteTrader Docker Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=pastetrader
POSTGRES_PASSWORD=pastetrader
POSTGRES_DB=pastetrader

# Full connection URL (used by backend)
DATABASE_URL=postgresql+asyncpg://pastetrader:pastetrader@db:5432/pastetrader

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# Security
# ============================================
# IMPORTANT: Change this in production!
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# LLM Provider API Keys
# ============================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI
OPENAI_API_KEY=sk-...

# Z.AI GLM
ZAI_GLM_TOKEN=

# ============================================
# Application Settings
# ============================================
# Logging
LOG_LEVEL=INFO

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000

# Scheduler
SCHEDULER_TIMEZONE=Asia/Seoul

# ============================================
# Frontend Settings
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
